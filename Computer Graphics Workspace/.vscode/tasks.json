{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Build Program_Name",
          "type": "shell",
          "command": "g++",
          "args": [
              "src/Program_Name.c",  // Update this path as necessary
              "-o",
              "build/Program_Name.exe",  // Update this path as necessary
              "-lbgi",
              "-lgdi32",
              "-lcomdlg32",
              "-luuid",
              "-loleaut32",
              "-lole32"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"]
      }
  ]
}
